<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="locations">
        <attr name="name" format="string" />
        <attr name="icon" format="reference" />
        <attr name="city_name" format="string"></attr>
    </declare-styleable>
    <declare-styleable name="CircleImageView">
        <attr name="border_width" format="dimension" />
        <attr name="border_color" format="color" />
    </declare-styleable>
    <declare-styleable name="TitleBar">
        <attr name="showRight" format="boolean"></attr>
        <attr name="showLeft" format="boolean"></attr>
        <attr name="centreTitle" format="reference|string"></attr>
        <attr name="leftTitle" format="reference|string"></attr>
        <attr name="rightTitle" format="reference|string"></attr>
    </declare-styleable>
    <declare-styleable name="WheelView">
        <attr name="Wheel_textselectColor" format="reference|color"></attr>
        <attr name="Wheel_textnormalColor" format="reference|color"></attr>
        <attr name="Wheel_main_bg" format="reference" />
        <attr name="Wheel_select_bg" format="reference" />
    </declare-styleable>
    <declare-styleable name="DynamicAdView">
        <attr name="interval" format="integer"></attr>
    </declare-styleable>
	<declare-styleable name="ClearEditText">
	    <attr name="limitnumber" format="integer"></attr>
	    <attr name="limitinput" format="boolean"></attr>
	    <attr name="righttextcolor" format ="color"></attr>
	    <attr name="righttype">
	        <enum name="right_clear" value="0"/>
	        <enum name="right_text" value="1"/>         
	    </attr>
	</declare-styleable>
	
	    <declare-styleable name="FlowLayout">
        <attr name="android:orientation" />
        <attr name="layoutDirection" format="enum">
            <enum name="ltr" value="0"/>
            <enum name="rtl" value="1"/>
        </attr>
        <attr name="debugDraw" format="boolean"/>
        <attr name="weightDefault" format="float" />
        <attr name="android:gravity"/>
    </declare-styleable>
    
    <declare-styleable name="FlowLayout_LayoutParams">
        <attr name="layout_newLine" format="boolean"/>
        <attr name="layout_weight" format="float"/>
        <attr name="android:layout_gravity"/>
    </declare-styleable>
    
    <declare-styleable name="WhorlView_Style">
        <attr name="WhorlView_SmallWhorlColor" format="color" />
        <attr name="WhorlView_MiddleWhorlColor" format="color" />
        <attr name="WhorlView_BigWhorlColor" format="color" />
        <attr name="WhorlView_CircleSpeed" format="integer" />
        <attr name="WhorlView_Parallax">
            <enum name="fast" value="1" />
            <enum name="medium" value="0" />
            <enum name="slow" value="2" />
        </attr>
        <attr name="WhorlView_SweepAngle" format="float" />
        <attr name="WhorlView_StrokeWidth" format="float" />
    </declare-styleable>
    
    <!-- amos.add.2015-12-1 聊一聊通话评分控件 -->
    <declare-styleable name="RatingBar">
        <attr name="rb_max_count" format="integer"/>
        <attr name="rb_count" format="float"/>
        <attr name="rb_fill" format="reference"/>
        <attr name="rb_half" format="reference"/>
        <attr name="rb_empty" format="reference"/>
        <attr name="rb_space" format="dimension"/>
        <attr name="rb_click_rating" format="boolean"/>
        <attr name="rb_touch_rating" format="boolean"/>
    </declare-styleable>


    <declare-styleable name="XEditText">
        <attr name="x_separator" format="string"/>
        <attr name="x_disableClear" format="boolean"/>
        <attr name="x_clearDrawable" format="reference"/>
        <attr name="x_showPwdDrawable" format="reference"/>
        <attr name="x_hidePwdDrawable" format="reference"/>
        <attr name="x_disableEmoji" format="boolean"/>
        <attr name="x_togglePwdDrawableEnable" format="boolean"/>
        <attr name="x_pattern" format="string"/>
    </declare-styleable>


    <declare-styleable name="DropDownMenu">

        <attr name="ddunderlineColor" format="color"/>
        <attr name="dddividerColor" format="color"/>
        <attr name="ddtextSelectedColor" format="color"/>
        <attr name="ddtextUnselectedColor" format="color"/>
        <attr name="ddmenuBackgroundColor" format="color"/>
        <attr name="ddmaskColor" format="color"/>
        <attr name="ddmenuTextSize" format="dimension"/>
        <attr name="ddmenuSelectedIcon" format="reference"/>
        <attr name="ddmenuUnselectedIcon" format="reference"/>
        <attr name="ddmenuMenuHeightPercent" format="float"/>
    </declare-styleable>
</resources>