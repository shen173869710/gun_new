<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:descendantFocusability="blocksDescendants"
    android:orientation="horizontal">

    <LinearLayout
        android:id="@+id/expand_list_child_item_1"
        android:layout_width="0dip"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center"
        >
        <TextView
            android:id="@+id/expand_list_child_item_1_tv"
            android:layout_width="@dimen/expand_list_child_check"
            android:layout_height="@dimen/expand_list_child_check"
            android:gravity="center"
            android:layout_margin="10dp"
            android:background="@drawable/checkbox_selector"/>
        <ImageView
            android:id="@+id/expand_list_child_item_1_iv"
            android:layout_width="@dimen/expand_list_child_image"
            android:layout_height="@dimen/expand_list_child_image"
            android:layout_gravity="center"
            android:scaleType="fitXY"
            android:layout_margin="10dp"
            />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/expand_list_child_item_2"
        android:layout_width="0dip"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center"
        >
        <TextView
            android:id="@+id/expand_list_child_item_2_tv"
            android:layout_width="@dimen/expand_list_child_check"
            android:layout_height="@dimen/expand_list_child_check"
            android:gravity="center"
            android:layout_margin="10dp"
            android:background="@drawable/checkbox_selector"/>
        <ImageView
            android:id="@+id/expand_list_child_item_2_iv"
            android:layout_width="@dimen/expand_list_child_image"
            android:layout_height="@dimen/expand_list_child_image"
            android:layout_gravity="center"
            android:scaleType="fitXY"
            android:layout_margin="10dp"
            />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/expand_list_child_item_3"
        android:layout_width="0dip"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center"
        >
        <TextView
            android:id="@+id/expand_list_child_item_3_tv"
            android:layout_width="@dimen/expand_list_child_check"
            android:layout_height="@dimen/expand_list_child_check"
            android:gravity="center"
            android:layout_margin="10dp"
            android:background="@drawable/checkbox_selector"/>
        <ImageView
            android:id="@+id/expand_list_child_item_3_iv"
            android:layout_width="@dimen/expand_list_child_image"
            android:layout_height="@dimen/expand_list_child_image"
            android:layout_gravity="center"
            android:scaleType="fitXY"
            android:layout_margin="10dp"
            />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/expand_list_child_item_4"
        android:layout_width="0dip"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center"
        >
        <TextView
            android:id="@+id/expand_list_child_item_4_tv"
            android:layout_width="@dimen/expand_list_child_check"
            android:layout_height="@dimen/expand_list_child_check"
            android:gravity="center"
            android:layout_margin="10dp"
            android:background="@drawable/checkbox_selector"/>
        <ImageView
            android:id="@+id/expand_list_child_item_4_iv"
            android:layout_width="@dimen/expand_list_child_image"
            android:layout_height="@dimen/expand_list_child_image"
            android:layout_gravity="center"
            android:scaleType="fitXY"
            android:layout_margin="10dp"
            />
    </LinearLayout>

</LinearLayout>