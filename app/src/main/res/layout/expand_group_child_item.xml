<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/main_expand_group_child"
    android:background="@drawable/main_poi_bg"
    android:descendantFocusability="blocksDescendants"
    android:orientation="horizontal"
    android:paddingLeft="30dp"
    android:paddingRight="@dimen/size_20">
    <TextView
        android:id="@+id/group_item_name"
        android:layout_width="0dp"
        android:layout_height="@dimen/main_expand_group_child"
        android:layout_gravity="center_vertical"
        android:layout_weight="1"
        android:gravity="center_vertical|left"
        android:textColor="@color/main_item_color"
        android:textSize="@dimen/text_size_18" />

    <TextView
        android:id="@+id/group_item_type"
        android:layout_width="0dp"
        android:layout_height="@dimen/main_expand_group_child"
        android:layout_gravity="center_vertical"
        android:layout_weight="1"
        android:gravity="center"
        android:textColor="@color/main_item_color"
        android:textSize="@dimen/text_size_18" />

    <TextView
        android:id="@+id/group_item_status"
        android:layout_width="0dp"
        android:layout_height="@dimen/main_expand_group_child"
        android:layout_gravity="center_vertical"
        android:layout_weight="1"
        android:gravity="center"
        android:textColor="@color/main_item_color"
        android:textSize="@dimen/text_size_18" />

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:padding="10dp"
        >
        <ImageView
            android:id="@+id/group_item_icon"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_centerInParent="true"
            android:scaleType="fitCenter" />
    </RelativeLayout>
</LinearLayout>