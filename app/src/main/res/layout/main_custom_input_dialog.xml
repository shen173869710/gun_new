<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/main_dialog_all_bg"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dialog_title_height"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:gravity="center"
            android:text="删除阀控器"
            android:textColor="#D0021B"
            android:textSize="20sp" />
    </LinearLayout>

    <View style="@style/line" />

    <com.auto.di.guan.view.XEditText
        android:id="@+id/input"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="35dp"
        android:layout_marginTop="18dp"
        android:layout_marginRight="35dp"
        android:background="@drawable/input_bg"
        android:focusableInTouchMode="true"
        android:gravity="center"
        android:hint="进行删除操作,请输入登陆密码"
        android:inputType="textPassword"
        android:maxLength="32"
        android:maxLines="16"
        android:singleLine="true"
        android:text=""
        android:textColor="@color/black"
        android:textSize="@dimen/size_18"
        android:theme="@style/MyEditText"
        app:x_clearDrawable="@mipmap/edittext_clear"
        app:x_hidePwdDrawable="@mipmap/edittext_hide"
        app:x_showPwdDrawable="@mipmap/edittext_show" />

    <View
        style="@style/line"
        android:layout_marginTop="20dp"></View>

    <LinearLayout
        android:id="@+id/main_custom_bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/main_dialog_all_bg"
        android:gravity="center"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="1dip"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/cancle"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dialog_button_height"
                android:background="@drawable/dialog_cancle_bg"
                android:text="@string/cancel"
                android:textColor="@color/black"
                android:textSize="18sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="1dip"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/ok"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dialog_button_height"
                android:background="@drawable/dialog_ok_bg"
                android:text="@string/confirm"
                android:textColor="@color/white"
                android:textSize="18sp" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>