<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#00000000"
    android:orientation="vertical" 
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dip"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:background="@drawable/bg_dialog_top_normal"
        android:orientation="vertical" >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dip"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_gravity="center_vertical"
            android:gravity="center"
            android:id="@+id/dailog_title"
            android:text="版本升级"
            android:textColor="@color/black"
            android:textSize="16sp" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/main_divider_width"
        android:layout_marginLeft="12dip"
        android:layout_marginRight="12dip"
        android:background="@color/main_divider" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:paddingBottom="10dp"
        android:background="@color/white"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/dialog_hint_message_tv"
            android:layout_width="0dp"
        	android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dip"
            android:layout_marginBottom="10dip"
            android:gravity="left"
            android:textColor="@color/black"
            android:lineSpacingExtra="3dip"
            android:textSize="14sp" />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/main_divider_width"
        android:layout_marginLeft="12dip"
        android:layout_marginRight="12dip"
        android:background="@color/main_divider" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dip"
        android:orientation="horizontal"
        android:gravity="center" >

        <LinearLayout
            android:layout_width="1dip"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal"
            >
            <Button
                android:id="@+id/dialog_cancle_but"
                android:layout_width="match_parent"
                android:layout_height="50dip"
                android:text="暂不更新"
                android:textColor="@color/blue"
                android:textSize="16sp" 
                android:background="@drawable/bg_dialog_left_pressed"
                />
        </LinearLayout>
		<View 
		    android:layout_width="@dimen/main_divider_width"
		    android:layout_height="50dip"
		    android:background="@color/main_divider"
		    />
        <LinearLayout
            android:layout_width="1dip"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal"
            >
            <Button
                android:id="@+id/dialog_sure_but"
                android:layout_width="match_parent"
                android:layout_height="50dip"
                android:background="@drawable/bg_dialog_right_pressed"
                android:text="立即更新"
                android:textColor="@color/blue"
                android:textSize="16sp" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>