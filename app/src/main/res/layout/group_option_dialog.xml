<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/main_dialog_all_bg"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:layout_marginTop="12dp"
        android:orientation="horizontal" >
        <TextView
            android:id="@+id/option_title"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:gravity="center"
            android:text="自动轮灌操作"
            android:textColor="@color/black"
            android:textSize="16sp" />
    </LinearLayout>
    <View
        style="@style/line"
        android:layout_marginLeft="12dip"
        android:layout_marginRight="12dip"
        />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dip"
        android:gravity="center"
        android:orientation="horizontal" >
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/option_open"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/bg_dialog_right_pressed"
                android:text="开启轮灌"
                android:textColor="@color/blue"
                android:textSize="16sp" />
        </LinearLayout>
        <View
            android:layout_width="@dimen/main_divider_width"
            android:layout_height="60dip"
            android:background="@color/main_divider" />
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal" >
            <Button
                android:id="@+id/option_close"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/bg_dialog_right_pressed"
                android:text="关闭轮灌"
                android:textColor="@color/blue"
                android:textSize="16sp" />
        </LinearLayout>
        <View
            android:layout_width="@dimen/main_divider_width"
            android:layout_height="60dip"
            android:background="@color/main_divider" />
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal" >
            <Button
                android:id="@+id/option_auto"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/bg_dialog_right_pressed"
                android:text="自动查询"
                android:textColor="@color/blue"
                android:textSize="16sp" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>