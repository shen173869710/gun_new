<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_bg"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    tools:context=".MainActivity">

    <include
        android:id="@+id/title_bar"
        layout="@layout/main_title_bar" />
    <LinearLayout
        android:layout_width="@dimen/main_item_width"
        android:layout_height="@dimen/main_expand_group_height"
        android:layout_marginTop="20dp"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="80.0dip"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/main_tab_me_item_margin"
            android:text="轮灌优先级"
            android:textColor="@color/black"
            android:textSize="@dimen/main_text_fourteen" />

        <EditText
            android:id="@+id/add_user_name"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_weight="1.0"
            android:background="@null"
            android:hint="输入用户姓名"
            android:maxLength="20"
            android:singleLine="true"
            android:textColor="@color/main_hint_color"
            android:textSize="@dimen/main_text_fourteen" />
    </LinearLayout>
    <View
        android:layout_width="@dimen/main_item_width"
        android:layout_height="2dp"
        android:background="@color/main_divider"
        />
    <LinearLayout
        android:layout_width="@dimen/main_item_width"
        android:layout_height="@dimen/main_expand_group_height"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="80.0dip"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/main_tab_me_item_margin"
            android:text="轮灌时长"
            android:textColor="@color/black"
            android:textSize="@dimen/main_text_fourteen" />

        <EditText
            android:id="@+id/add_user_pwd"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_weight="1.0"
            android:background="@null"
            android:hint="输入用户密码"
            android:inputType="phone"
            android:maxLength="12"
            android:singleLine="true"
            android:textColor="@color/main_hint_color"
            android:textSize="@dimen/main_text_fourteen" />
    </LinearLayout>



    <Button
        android:id="@+id/add_user_add"
        android:layout_width="@dimen/main_button_width"
        android:layout_height="@dimen/main_button_height"
        android:text="保存设置"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:textColor="@color/white"
        android:background="@drawable/bg_red_buttom_rect"
        />
</LinearLayout>