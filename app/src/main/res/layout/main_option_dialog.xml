<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/main_dialog_all_bg"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >
        <TextView
            android:id="@+id/main_option_title"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dialog_title_height"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:gravity="center"
            android:text="提示信息"
            android:textColor="@color/black"
            android:textSize="16sp" />
    </LinearLayout>
    <View
        style="@style/line"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
         />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dialog_title_height"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="horizontal"
        >
        <TextView
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:gravity="center_vertical|right"
            android:text="阀门编号"
            android:textColor="@color/black"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/main_option_1"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:gravity="center_vertical|left"
            android:text="1111"
            android:textColor="@color/black"
            android:textSize="16sp" />
    </LinearLayout>
    <View
        style="@style/line"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="horizontal"
        >
        <TextView
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:gravity="center_vertical|right"
            android:text="阀门别名"
            android:textColor="@color/black"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/main_option_2"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:gravity="center_vertical|left"
            android:text="2222"
            android:textColor="@color/black"
            android:textSize="16sp" />
    </LinearLayout>
    <View
        style="@style/line"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="horizontal"
        >
        <TextView
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:gravity="center_vertical|right"
            android:text="阀门ID"
            android:textColor="@color/black"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/main_option_3"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:gravity="center_vertical|left"
            android:text="阀门别名"
            android:textColor="@color/black"
            android:textSize="16sp" />
    </LinearLayout>
    <View
        style="@style/line"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="horizontal"
        >
        <TextView
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:gravity="center_vertical|right"
            android:text="项目ID"
            android:textColor="@color/black"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/main_option_4"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:gravity="center_vertical|left"
            android:text="4444"
            android:textColor="@color/black"
            android:textSize="16sp" />
    </LinearLayout>
    <View
        style="@style/line"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="horizontal"
        >
        <TextView
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:gravity="center_vertical|right"
            android:text="前次查询状态"
            android:textColor="@color/black"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/main_option_5"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:gravity="center_vertical|left"
            android:textColor="@color/black"
            android:textSize="16sp" />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="12dip"
        android:layout_marginRight="12dip"
        android:background="#d1d1d1" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dip"
        android:gravity="center"
        android:orientation="horizontal" >
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/main_option_status"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/bg_dialog_left_pressed"
                android:text="查询"
                android:textColor="@color/blue"
                android:textSize="16sp" />
        </LinearLayout>
        <View
            android:layout_width="@dimen/main_divider_width"
            android:layout_height="40dip"
            android:background="@color/main_divider" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/main_option_open"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white"
                android:text="开启"
                android:textColor="@color/blue"
                android:textSize="16sp" />
        </LinearLayout>
        <View
            android:layout_width="@dimen/main_divider_width"
            android:layout_height="40dip"
            android:background="@color/main_divider" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/main_option_close"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/bg_dialog_right_pressed"
                android:text="关闭"
                android:textColor="@color/main"
                android:textSize="16sp" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>